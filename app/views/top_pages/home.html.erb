<div class="container">
  <div class="text-center">
    <h1><strong>暇つぶし脳トレサイト</strong></h1>
    <% if logged_in? %>
      <h2>Form</h2>
      <%= form_for(@micropost, url: post_path) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group">
          <%= f.label :question %>
          <%= f.text_field :question, class: "form-control", placeholder: "Write question" %>
        </div>
        <div class="form-group">
          <%= f.label :answer %>
          <%= f.text_field :answer, class: "form-control", placeholder: "Write answer" %>
        </div>
        <div class="form-group">
          <%= f.submit "Post", class: "btn btn-outline-info btn-block" %>
        </div>
      <% end %>
      <h2>Microposts(<%= @microposts.all.count %>)</h2>
      <ul class="list-group">
        <%= render 'microposts/micropost' %>
      </ul>
    <% else %>
      <h4><%= link_to "ログイン", login_path %>して早速使ってみよう！</h4>
      <h4>空き時間を使って賢くなろう！</h4>
    <% end %>
  </div>
</div>

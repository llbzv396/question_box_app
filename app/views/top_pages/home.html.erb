<div class="container">
  <div class="text-center">
    <h1>To Study App !</h1>
    <% if logged_in? %>
      <h2>Form</h2>
      <%= form_for(@micropost, url: post_path) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group">
          <%= f.text_field :question, class: "form-control", placeholder: "Write question" %>
        </div>
        <div class="form-group">
          <%= f.text_field :answer, class: "form-control", placeholder: "Write answer" %>
        </div>
        <div class="form-group">
          <%= f.submit "Post", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
      <h2>Microposts(<%= @microposts.all.count %>)</h2>
      <ul class="list-group">
        <%= render 'microposts/micropost' %>
      </ul>
    <% else %>
      <h4>This is my first app!</h4>
      <h4>Let's join us!</h4>
    <% end %>
  </div>
</div>
